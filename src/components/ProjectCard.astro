---
import type { Project } from "@/data/projects";
import { Image } from "astro:assets";
import ButtonCard from "./ButtonCard.astro";

type Props = Project;

const { title, description, techs, link, isComingSoon, img, codelink } =
  Astro.props;

const formatTechs = (values: string[]) =>
  values.toString().replaceAll(",", " â€¢ ");
---

<>
  {
    isComingSoon && (
      <div class="group flex w-full flex-col justify-between gap-2 rounded-md border border-neutral-700 p-2 md:flex-row md:items-center">
        {" "}
        <Image
          src={img ?? "/post_img.webp"}
          class="self-center rounded-lg w-[45rem] md:max-w-[13rem]"
          alt="Your Profile"
          width="200"
          height="200"
        />
        <div class="grow w-full pl-4">
          <div class="flex items-start">
            <h1 class="text-neutral-300 text-xl font-bold pr-2">{title}</h1>
            <p class="w-[7rem] text-sm rounded-md text-center bg-neutral-900 px-1 py-1">
              Cooming Soon
            </p>
          </div>
          <p class="py-1">{description}</p>
          <div class="flex flex-row">
            <p class="text-blue-500 py-3 md:py-1">{formatTechs(techs)}</p>
          </div>
        </div>
      </div>
    )
  }

  {
    !isComingSoon && (
      <>
        <div class="group flex w-full flex-col gap-5 md:gap-3 rounded-md border border-neutral-700 p-2 md:flex-row md:items-center">
          {" "}
          <Image
            src={img ?? "/post_img.webp"}
            class="self-center rounded-lg w-[45rem] md:max-w-[13rem]"
            alt="Image Project"
            width="200"
            height="200"
          />
          <div class="grow w-full pl-4">
            <div class="flex flex-row justify-between items-center gap-4">
              <h1 class="text-neutral-300 text-xl font-bold">{title}</h1>
            </div>
            <p class="py-1">{description}</p>
            <div class="flex flex-row justify-between">
              <p class="text-blue-500 pr-3 py-3 md:py-1 md:pr-0">
                {formatTechs(techs)}
              </p>
              <div class="flex justify-center items-center">
                <ButtonCard
                  text="Code"
                  border="border rounded-md border-[#214585]"
                  link={codelink}
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    x="0px"
                    y="0px"
                    width="18"
                    height="18"
                    viewBox="0 0 24 24"
                    class="fill-[#b6b2b2] ml-1 transition-all duration-300"
                  >
                    <path d="M10.9,2.1c-4.6,0.5-8.3,4.2-8.8,8.7c-0.5,4.7,2.2,8.9,6.3,10.5C8.7,21.4,9,21.2,9,20.8v-1.6c0,0-0.4,0.1-0.9,0.1 c-1.4,0-2-1.2-2.1-1.9c-0.1-0.4-0.3-0.7-0.6-1C5.1,16.3,5,16.3,5,16.2C5,16,5.3,16,5.4,16c0.6,0,1.1,0.7,1.3,1c0.5,0.8,1.1,1,1.4,1 c0.4,0,0.7-0.1,0.9-0.2c0.1-0.7,0.4-1.4,1-1.8c-2.3-0.5-4-1.8-4-4c0-1.1,0.5-2.2,1.2-3C7.1,8.8,7,8.3,7,7.6C7,7.2,7,6.6,7.3,6 c0,0,1.4,0,2.8,1.3C10.6,7.1,11.3,7,12,7s1.4,0.1,2,0.3C15.3,6,16.8,6,16.8,6C17,6.6,17,7.2,17,7.6c0,0.8-0.1,1.2-0.2,1.4 c0.7,0.8,1.2,1.8,1.2,3c0,2.2-1.7,3.5-4,4c0.6,0.5,1,1.4,1,2.3v2.6c0,0.3,0.3,0.6,0.7,0.5c3.7-1.5,6.3-5.1,6.3-9.3 C22,6.1,16.9,1.4,10.9,2.1z" />
                  </svg>
                </ButtonCard>
                <ButtonCard text="Live" link={link}>
                  <svg
                    width="18"
                    height="18"
                    viewBox="0 0 18 18"
                    fill="none"
                    class="transition-all duration-300"
                  >
                    <path
                      d="M5.25 12.75L12.75 5.25"
                      stroke="#999999"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    />
                    <path
                      d="M5.25 5.25H12.75V12.75"
                      stroke="#999999"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    />
                  </svg>
                </ButtonCard>
              </div>
            </div>
          </div>
        </div>
      </>
    )
  }
</>
